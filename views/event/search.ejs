            <div class = "columns">
            <% events.forEach( function(event) { %>
                <div class = "column">
                <div class="card">
                <div class="card-image">
                 <figure class="image is-4by3">
                   <img src="<%= event.urlimg %>">
                 </figure>
                </div>
                <div class="card-content">
                 <div class="media">
                   <div class="media-left">
                     <figure class="image is-48x48">
                       <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                     </figure>
                   </div>
                   <div class="media-content">
                     <p class="title is-4"><%= event.name %></p>
                     <p class="subtitle is-6"><%= event.organizer %></p>
                   </div>
                 </div>

                 <div class="content">
                    <%= event.name %>
                    <br>
                    <%= event.date %>
                    <br>
                    <%= event.starttime %> - <%= event.endtime %>
                  </div>        
               </div>
             </div>
            </div>
            <% }); %>

    <div class ="column">
    <div class="field">
    <label class="label">Event Name</label>
    <div class="control">
        <input class="input" type="text" placeholder="Text input" name="name">
    </div>
    </div>

    <div class="field">
        <label class="label">Organizer</label>
        <div class="control">
            <div class="select">
                <select id = "organizer" name = "organizer">
                    <option value="">Please pick a organizer</option>
                    <option value="HSBS">HSBS</option>
                    <option value="BEA">BEA</option>
                    <option value="Google">Google</option>
                    <option value="Microsoft">Microsoft</option>
                    <option value="Amazon">Amazon</option>
                </select>
            </div>
        </div>
    </div>

    <div class="field">
        <label class="label">Start Date</label>
        <div class="control">
        <input class="input" type="date" id="startdate">
    </div>
    </div>

        <div class="field">
            <label class="label">End Date</label>
            <div class="control">
                <input class="input" type="date" id="enddate">
            </div>

            <div class="field">
                <label class="label">Venue</label>
                <div class="control">
                    <div class="select">
                        <select id = "venue" name = "venue">
                            <option value="">Please pick a venue</option>
                            <option value="Central">Central</option>
                            <option value="Kowloon Tong">Kowloon Tong</option>
                            <option value="Tsim Sha Tsui">Tsim Sha Tsui</option>
                            <option value="Jordan">Jordan</option>
                            <option value="Amazon">Mongkok</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                  <button class="button is-link">Submit</button>
                </div>
            </div>
        </div>
        </div>
    </div>

    <div class = "columns">
        <div class="pagination" role="navigation" aria-label="pagination">
            <a class="pagination-previous">Previous</a>
            <a class="pagination-next">Next page</a>
            <ul class="pagination-list">
              <li>
                <a class="pagination-link" aria-label="Goto page 1">1</a>
              </li>
              <li>
                <a class="pagination-link" aria-label="Goto page 45">2</a>
              </li>
              <li>
                <span class="pagination-ellipsis">&hellip;</span>
              </li>
              <li>
                <a class="pagination-link is-current" aria-label="Page 46" aria-current="page">4</a>
              </li>
              <li>
                <a class="pagination-link" aria-label="Goto page 47">5</a>
              </li>
              <li>
                <span class="pagination-ellipsis">&hellip;</span>
              </li>
              <li>
                <a class="pagination-link" aria-label="Goto page 86">7</a>
              </li>
            </ul>
          </div>

    </div>


        
   